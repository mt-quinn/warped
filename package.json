{
  "name": "warped",
  "private": true,
  "version": "1.0.0",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "preact": "^10.19.6"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "vite": "^4.5.3"
  },
  "build": {
    "appId": "com.warped.app",
    "productName": "Warped",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
